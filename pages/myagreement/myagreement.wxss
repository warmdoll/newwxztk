/* 订单列表内容样式开始 */

.agreementlist-content {
  display: flex;
  flex-direction: column;
  padding: 100rpx 30rpx 80rpx 30rpx;
}
.agreementlist-content-item{
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-between;
  border-top:1px solid #f2f2f2;
  padding:10rpx;
}
.agreementlist-content-item:nth-of-type(0){
  border: none;
}
.agreementlist-content-title{
  max-width: 620rpx;
  color: #999;
  font-size:28rpx;
}
.agreementlist-content-icon{
  height: 48rpx;
  width: 44rpx;
  margin-right: 16rpx;
  background-image: url("http://wap.wangxiao.cn/ztkxcx/images/icon3.png");
  background-repeat: no-repeat;
  background-size: 2000rpx 600px;
  background-position: -381rpx 0rpx;
}
.agreementlist-items {
  font-size: 28rpx;
  padding-bottom: 10rpx;
  background-color: #fff;
}
.onekey-agreement-btn{
  height: 100rpx;
  line-height: 100rpx;
  text-align: center;
  font-size: 30rpx;
  color: #fff;
  background: #6591fc;
  position: fixed;
  bottom: 0;
  width:100%;
}
.no-data{
  position: absolute;
  width: 100%;
  height: 100%;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  background-color:#F5F6F7; 
  z-index: 0;
  top: 0;
}
.no-data-img{
  width: 371rpx;
  height: 202rpx;
}
.no-data-text{
  margin-top: 86rpx;
  color: #D5D5D5;
}