/* 底部tab样式开始 */

.orderlist-bottom-tab-content {
  position: fixed;
  height: 100rpx;
  font-size: 34rpx;
  line-height: 100rpx;
  box-sizing: border-box;
  bottom: 0;
  display: flex;
  flex-direction: row;
  width: 100%;
  background: #fff;
  z-index: 999;
}

.orderlist-bottom-tab-item {
  width: 50%;
  color: #c7c7cb;
  font-size: 34rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  border-top: 1rpx solid #d0d0d7;
}

.orderlist-bottom-tab-item.orderlist-bottom-tab-item-active {
  color: #6591fc;
  border-top: 2px solid #6591fc;
}

.orderlist-bottom-tab-item-name {
  width: 100%;
  height: 34rpx;
  line-height: 34rpx;
  text-align: center;
  border-left: 1px solid #d0d0d7;
}

.orderlist-bottom-tab-item:nth-child(1) > .orderlist-bottom-tab-item-name {
  border-left: none;
}

/* 底部tab样式end */

/* 头部tab样式开始 */

