/* pages/exclusiveTeacher/exclusiveTeacher.wxss */
.exclusive-content{
  font-size: 34rpx;
  position: absolute;
  width: 100%;
  height: 100%;
  overflow: hidden;
  background: -webkit-gradient(linear,0% 0%, 0% 100%, from(#6A96EF), to(#FFFFFF), color-stop(0.0,#6A96EF))
}
.exclusive-tip1{
  font-size:40rpx;
  height: 40rpx;
  line-height: 40rpx;
  margin-top: 52rpx;
  text-align: center;
  color: #fff;
}
.exclusive-tip2{
  height: 34rpx;
  line-height: 34rpx;
  margin-top: 22rpx;
  text-align: center;
  color:#fff;
}
.exclusive-title{
  position: relative;
  width: 446rpx;
  height: 98rpx;
  background: #5D8BF0;
  border-radius: 20rpx;
  margin: auto;
  text-align: center;
  color:#fff;
  line-height: 98rpx;
  box-shadow: 2rpx 2rpx 10rpx #4395FF;
  margin-top: 50rpx;
}
.exclusive-info{
  box-sizing: border-box;
  padding: 90rpx 36rpx 36rpx 36rpx;
  width: 600rpx;
  background: #fff;
  margin: auto;
  flex-direction: column;
  align-items: center;
  border-radius: 30rpx;
  box-shadow: 0rpx 10rpx 20rpx #c5c5c5;
  margin-top: -49rpx;
}
.exclusive-info-data{
  flex-direction: row;
  padding: 0 54rpx;
}
.exclusive-pic{
  width: 120rpx;
  height: 120rpx;
}
.exclusive-infocontent{
  padding: 20rpx 0 16rpx 20rpx;
  flex-direction: column;
  justify-content: space-between;
}
.exclusive-name{
  font-size:34rpx;
  color: #454545;
}
.exclusive-wx{
  font-size: 28rpx;
  color: #FF7E5E;
}
.exclusive-info-tip{
  margin-top: 20rpx;
  font-size:28rpx;
  color: #818181;
  padding: 0 54rpx;
  text-align: center;
}
.exclusive-qrcode-content{
  margin-top: 40rpx;
  padding-top: 40rpx;
  box-sizing: border-box;
  width: 100%;
  border-top: 1px dashed #EDEDED;
}
.exclusive-qrcode-parent{
  border: 1px solid #D6D6D6;
  padding: 16rpx;
  width: 272rpx;
  height: 272rpx;
  box-sizing: border-box;
  margin: 0 auto;
}
.exclusive-qrcode{
  width: 234rpx;
  height: 234rpx;
}
.exclusive-qrcode-tip{
  font-size: 28rpx;
  color: #6591FC;
  text-align: center;
  line-height: 60rpx;
}
.exclusive-type2-img{
  width: 280rpx;
  height: 180rpx;
}
.exclusive-type2-tip{
  font-size: 34rpx;
  color: #3D3D3D;
  line-height: 108rpx;
}