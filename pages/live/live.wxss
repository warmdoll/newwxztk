  height:55rpx;
  line-height:55rpx;
  margin-bottom:25rpx;
  border: 1px solid #58a6f8;
}
.translate-box {
  width: 100%;
  background-color: #ccc;
  height: 100%;
}

.tab-container {
  width: 200%;
  height: 100%;
}

.swiper-box {
  display: block;
  margin-top: 100rpx;
  width: 100%;
  height: 700rpx;
  overflow: hidden;
  box-sizing: border-box;
}

.line-top-img {
  width: 100%;
