.flexbox {
  display: flex;
  flex-direction: column;
  align-items: center;
  height: 100px;
  justify-content: space-between;
}

.flex-list {
  display: flex;
  width: 100%;
}

.flex-item {
  align-items: center;
  justify-content: center;
}

.flex-item-middle {
  padding: 10rpx 30rpx 0 30rpx;
}

.flex-list {
  padding: 20rpx 0;
  border-bottom: 1px solid #f2f2f2;
}

.live-list {
  padding: 20rpx 0;
}

.img-list {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
}

.list-ul {
  width: 100%;
  color: #333;
}

.live-list-top {
  background-color: #8df;
  padding: 20rpx 20px 0 0;
  position: relative;
}

.live-list-detail {
  color: #fff;
  font-size: 30rpx;
  position: absolute;
  top: 180rpx;
  left: 42%;
  margin-left: -175rpx;
}

.live-title {
  color: #333;
  font-size: 30rpx;
  width: 400rpx;
}

.live-btn {
  color: #fff;
  font-size: 24rpx;
  height: 55rpx;
  line-height: 55rpx;
}
.live-btn-bespeak{
  color: #58a6f8;
}

