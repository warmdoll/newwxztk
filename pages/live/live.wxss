@import '../template/showDialog/showDialog.wxss';
.tab-box {
  width: 100%;
  border-bottom: 1px solid #e8e8e8;
  position: fixed;
  top: 0;
  left: 0;
  z-index: 100;
  background-color: #fff;
}

.tab-item {
  width: 50%;
  padding: 20rpx 0;
  margin-bottom: 10rpx;
}

.text-item {
  color: #666;
  font-size: 30rpx;
  padding-bottom: 30rpx;
}

.live-btn-box {
  display: flex;
  align-items: center;
  justify-content: center;
  background-color:#58a6f8;
  padding:0 20rpx;
  border-radius:30rpx;
  color:#fff;
  font-size:24rpx;
  height:55rpx;
  line-height:55rpx;
  margin-bottom:25rpx;
}
