
.user-img-box{
  display: flex;
  border-radius: 50%;
  align-items: center;
  justify-content: center;
  margin: 70rpx 0;
}
.user-img-box image{
  width: 200rpx;
  height: 200rpx;
  display: flex;
  border-radius: 50%;
}
.input-box{
  color: #999;
  font-size: 28rpx;
  border-bottom: 1px solid #f2f2f2;
  height: 100rpx;
  line-height: 100rpx;
  padding: 0 20rpx;
}
.button-class{
  border: none;
  margin-top: 80rpx;
  background-color: #58a6f8;
  color: #fff;
  border-radius: 40px;
}
.or-text{
  color: #ff8500;
  margin-left: 10rpx;
}
.tip-text{
  margin-top: 30rpx;
}
