.mask_layer {
  width: 100%;
  height: 100%;
  position: fixed;
  z-index: 1000;
  background: #000;
  opacity: 0.5;
  overflow: hidden;
}

.mask_layer-content {
  position: fixed;
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
  background: #000;
  opacity: 0.5; 
}

.modal_box {
  width: 580rpx;
  overflow: hidden;
  margin: 0 auto;
  z-index: 1001;
  background: #fafafa;
  border-radius: 10px;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-around;
  padding: 32rpx 60rpx;
  box-sizing: border-box;
  opacity: 1;
}

.modal_box-content {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}

.modal_box-pic {
  width: 90rpx;
  height: 90rpx;
}

.modal_box-text {
  font-size: 24rpx;
  color: #d5d5d5;
  margin-top: 12rpx;
}
.modal-box-line{
  width: 1px;
  height: 90rpx;
  background: #d5d5d5;
}
