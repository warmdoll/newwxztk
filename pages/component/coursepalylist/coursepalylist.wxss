.course-palylist-content{
  padding: 20rpx 20rpx;
}
.subjects-content{
  display: flex;
  flex-direction: row;
  align-items: center;
  padding: 20rpx 0;
  margin-top: 20rpx;
}
.subjects-content:nth-of-type(1){
  margin-top: 0;
}
.subjects-icon{
  width: 44rpx;
  height: 50rpx;
  background-size: 1800rpx 900rpx;
  background-image: url("http://wap.wangxiao.cn/ztkxcx/images/icon3.png?na");
  background-position:-862rpx 0rpx;
}
.subjects-icon-open{
  width: 44rpx;
  height: 50rpx;
