  background-image: url("http://wap.wangxiao.cn/ztkxcx/images/icon3.png?na");
  background-position:-804rpx 0rpx;
}
.subjects-name{
  font-size:30rpx;
  line-height: 50rpx;
  padding-left: 20rpx;
  color: #424242;
  max-width: 516rpx;
  overflow: hidden;
  text-overflow:ellipsis;
  white-space: nowrap;
}
.courses-content{
  display: flex;
  flex-direction: column;
}
